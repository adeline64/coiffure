{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}
<section class="section contact" id="contact">
    <div class="title">
        <h1>Contact</h1>
    </div>
<div class="contact-center container">
        <div class="left" data-aos="fade-down-right" data-aos-duration="2000">
            <div>
                <span class="icon"><i class="fas fa-map-marker-alt"></i></span>
                <span class="content">
                    <h3>Adresse</h3>
                    <span>Paris, France</span>
                </span>
            </div>

            <div>
                <span class="icon"><i class="fas fa-envelope"></i></span>
                <span class="content">
                    <h3>Email</h3>
                    <span>afrostyle@contact.com</span>
                </span>
            </div>

            <div>
                <span class="icon"><i class="fas fa-phone"></i></span>
                <span class="content">
                    <h3>Téléphone</h3>
                    <span>01 02 03 04 05</span>
                </span>
            </div>

            <div>
                <span class="icon"><i class="fas fa-clock"></i></span>
                <span class="content">
                    <h3>Horaires</h3>
                    <span>Du Lundi au Samedi | 10h-20h</span>
                </span>
            </div>
            </div>


<div class="bg-white p-5 contact-form">
    <div class="form-group">
{{ form_start(our_form) }}
    {{ form_row(our_form.fullName, {'attr': {'class': 'form-control'}}) }}

</div>
<div class="form-group">
    {{ form_row(our_form.firstName, {'attr': {'class': 'form-control'}}) }}

</div>
<div class="form-group">
    {{ form_row(our_form.email, {'attr': {'class': 'form-control'}}) }}

</div>
<div class="form-group">
    {{ form_row(our_form.objet, {'attr': {'class': 'form-control'}}) }}

</div>
<div class="form-group">
    {{ form_row(our_form.message, {'attr': {'class': 'form-control'}}) }}

</div>

<div class="form-group">
    <input type="submit" value="Send" class="btn btn-primary py-3 px-5">
</div>
{{ form_end(our_form) }}
</div>

</div>
{% endblock %}
